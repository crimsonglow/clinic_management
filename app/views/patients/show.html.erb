<div class="card sadow"><h2>My recommendations</h2></div>
	<div class="card sadow">
		<div class="row">
			<% @inactive_appointment.each do |appointment| %>
				<div class="col-4 ">
					Doctor: <%= appointment.doctor.name %>,
					<%= appointment.doctor.category.name %><br />
					Recommendation: <%= appointment.recommendation %><br />
					status: <%= appointment.status %>
				</div>
			<% end %>
		</div>
	</div>

<div class="card sadow"><h2>Make an appointment with a doctor</h2></div>
	<div class="card sadow">
		<div class="row">
			<% @categories.each do |category| %>
				<% category.doctors.each do |doctor| %>
					<div class="col-4 ">
						Doctor: <%= category.name %>,
						<%= doctor.name %><br />
						<%= doctor.phone_number %>
						<%= button_to 'make an appointment',
							appointments_path(doctor_id: doctor.id), class: "btn btn-primary"
						%><br />
					</div>
				<% end %>
			<% end %>
		</div>
</div>
